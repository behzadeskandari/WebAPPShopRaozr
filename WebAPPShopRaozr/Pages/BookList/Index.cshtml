@page
@model WebAPPShopRaozr.Pages.BookList.IndexModel
@{
}

<h2>BookList</h2>
@if(Model.Message != null)
{
    <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">
                &times;
            </span>
        </button>
        @Model.Message
    </div>
}


<a asp-page="Create" class="btn btn-primary">Create New Book</a>
<form method="post">
    @if(Model.Books.Count() > 0)
    {
        <table class="table">
            <tr>
                <th>@Html.DisplayNameFor(x => x.Books.FirstOrDefault().Name)</th>
                <th>@Html.DisplayNameFor(x => x.Books.FirstOrDefault().ISBN)</th>
                <th>@Html.DisplayNameFor(x => x.Books.FirstOrDefault().Author)</th>
                <th></th>
                <th></th>
            </tr>
            @foreach(var item in Model.Books)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.ISBN)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Author)
                    </td>
                    <td>
                        <button asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            Delete
                        </button>
                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Edit</a>
                    </td>
                </tr>
            }
        </table>

        @*<div>Book Available</div>*@
    }else{
        <div>
            No Books In Data base
        </div>
    }
</form>